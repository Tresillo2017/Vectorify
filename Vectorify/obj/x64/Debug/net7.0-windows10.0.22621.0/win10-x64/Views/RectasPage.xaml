<Page
    x:Class="Vectorify.Views.RectasPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:controls="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    mc:Ignorable="d">

    <RelativePanel x:ConnectionId='2' x:Name="ContentArea">
        <TextBlock x:ConnectionId='3' x:Name="Texto1" Text="Escribe las cordenadas del Vector" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,10"/>
        <NumberBox x:ConnectionId='4' x:Name="ValorX_Vector"
                Header="Introduce el valor de X:"
                Value="1"
                SpinButtonPlacementMode="Compact"
                SmallChange="10"
                LargeChange="100"
                RelativePanel.Below="Texto1" Height="60" Width="150"/>
            <NumberBox x:ConnectionId='5' x:Name="ValorY_Vector"
                Header="Introduce el valor de Y:"
                Value="1"
                SpinButtonPlacementMode="Compact"
                SmallChange="10"
                LargeChange="100"
                RelativePanel.Below="Texto1" RelativePanel.RightOf="ValorX_Vector" Height="60" Width="150" Margin="30,0,0,0"/>
            
        <TextBlock x:ConnectionId='6' x:Name="Texto2" Text="Escribe las cordenadas del punto" Style="{StaticResource SubtitleTextBlockStyle}" RelativePanel.Below="ValorX_Vector" Margin="0,50,0,10"/>
        
            <NumberBox x:ConnectionId='7' x:Name="ValorX_Punto"
                Value="1"
                Header="Introduce el valor de X:"
                SpinButtonPlacementMode="Compact"
                SmallChange="10"
                LargeChange="100"
                RelativePanel.Below="Texto2" Height="60" Width="150"/>
            <NumberBox x:ConnectionId='8' x:Name="ValorY_Punto"
                Header="Introduce el valor de Y:"
                Value="1"
                SpinButtonPlacementMode="Compact"
                SmallChange="10"
                LargeChange="100"
                RelativePanel.Below="Texto2" RelativePanel.RightOf="ValorX_Punto" Height="60" Width="150" Margin="30,0,0,0"/>
        
        <!--Lado derecho-->
        <Button x:ConnectionId='9' x:Name="Boton_Calcular" Style="{StaticResource AccentButtonStyle}"                          Content="Calcular" RelativePanel.AlignBottomWithPanel="True" Margin="0,0,0,280"/>
        <TextBlock x:ConnectionId='10' x:Name="Texto_Derecha" Text="Solucion" Style="{StaticResource SubtitleTextBlockStyle}" RelativePanel.AlignRightWithPanel="True" Margin="0,0,250,0"/>
        <Canvas x:ConnectionId='11' Name="canvas" Background="White" Width="500" Height="500" RelativePanel.AlignRightWithPanel="True" Margin="50"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Top row -->
            <TextBlock Text="This is the top row" Grid.Row="0" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <!-- Left column -->
            <TextBlock Text="This is the left column" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <!-- Center content -->
            <TextBlock Text="This is the center content" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <!-- Right column -->
            <TextBlock Text="This is the right column" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <!-- Bottom row -->
            <TextBlock Text="This is the bottom row" Grid.Row="2" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>

    </RelativePanel>
</Page>

